<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.dataliquid.maven</groupId>
    <artifactId>v4-imports-invalid-price-test</artifactId>
    <version>1.0.0</version>
    
    <build>
        <plugins>
            <plugin>
                <groupId>com.dataliquid.maven</groupId>
                <artifactId>json-yaml-validator-maven-plugin</artifactId>
                <version>@project.version@</version>
                <configuration>
                    <schemaFile>${basedir}/src/test/resources/schemas/v4/product-with-imports.json</schemaFile>
                    <sourceDirectory>${basedir}/src/test/resources/test-data/v4/invalid</sourceDirectory>
                    <includes>
                        <include>product-with-imports-invalid-price.json</include>
                    </includes>
                    <schemaVersion>V4</schemaVersion>
                    <failOnError>true</failOnError>
                    <schemaMappings>
                        <schemaMapping>http://example.com/schemas/v4/=${basedir}/src/test/resources/schemas/v4/</schemaMapping>
                    </schemaMappings>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>